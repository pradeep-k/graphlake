CC=g++
CFLAGS=-g -Wall -std=gnu++11  -march=native -fopenmp
SRC=main.cpp \
	graph.cpp\
	ugraph.cpp\
	dgraph.cpp\
	sgraph.cpp\
	stringkv.cpp\
	typekv.cpp\
    vgraph.cpp\
	nt_to_edge.cpp\
	query_triple.cpp\
	graph_query.cpp\
	type.cpp\
	test1.cpp\
	

HEADER=graph.h\
	labelkv.h\
	enumkv.h\
	numkv.h\
	typekv.h\
	query_node.h\
	query_triple.h\
	type.h\
    query_clause.h\

INCLUDES= -Iantlr4/include -Iantlr4
LIBDIRS= -Lantlr4/lib

DEPS=$(SRC) $(HEADER)

grdf: $(DEPS)
	$(CC) $(CFLAGS) $(INCLUDES) $(LIBDIRS) $(SRC)  -o grdf

clean:
	rm grdf *.o 
